<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            app:cardBackgroundColor="@color/card_bg_color"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfileIcon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_launcher_background"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

                <TextView
                    android:id="@+id/tvNameAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Arun, 29" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/location"
                        android:src="@drawable/baseline_location_on_24" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="16sp"
                        tools:text="Mumbai, Maharashtra" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:contentDescription="@string/location"
                        android:src="@drawable/phone_call" />

                    <TextView
                        android:id="@+id/tvCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="16sp"
                        tools:text="213515135" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp">

                    <!--<com.example.shaadidemoapp.utils.ExpandableButton
                        android:id="@+id/btnDecline"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:icon="@drawable/baseline_close_24"
                        android:text="@string/declined"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:tint="@color/red"
                        app:iconTint="@color/white" />



                    <com.example.shaadidemoapp.utils.ExpandableButton
                        android:id="@+id/btnAccept"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:icon="@drawable/baseline_check_24"
                        android:text="@string/accepted"
                        android:layout_gravity="end"
                        android:textColor="@color/white"
                        android:tint="@color/red"
                        app:iconTint="@color/white" />-->

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Accepted"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="18sp"
                        android:background="@drawable/green_rc_bg"
                        android:textColor="@color/white"/>

                    <ImageButton
                        android:id="@+id/btnDecline"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/round_button"
                        android:backgroundTint="@color/red"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/baseline_close_24" />

                    <ImageButton
                        android:id="@+id/btnAccept"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_button"
                        android:backgroundTint="@color/green"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/baseline_check_24" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>